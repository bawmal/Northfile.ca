# Production Environment Configuration
# Copy this file to .env.local for development or .env for production

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=northfile
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
DB_POOL_SIZE=10

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Email Service
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_FROM_ADDRESS=noreply@northfile.ca
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_smtp_password

# File Storage
STORAGE_PROVIDER=aws_s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=northfile-uploads
AWS_S3_BUCKET_URL=https://northfile-uploads.s3.amazonaws.com

# OCR Service
OCR_SERVICE_PROVIDER=tesseract
OCR_API_URL=https://api.ocr.service.com
OCR_API_KEY=your_ocr_api_key

# Bank Integration
BANK_API_PROVIDER=plaid
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Payment Processing
PAYMENT_PROVIDER=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Security
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your_csrf_secret_here

# Feature Flags
ENABLE_BANK_INTEGRATION=true
ENABLE_OCR_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_TWO_FACTOR_AUTH=false

# Application Limits
MAX_PROPERTIES_PER_USER=50
MAX_FILE_SIZE_MB=10
MAX_TRANSACTIONS_PER_IMPORT=1000

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
CANADA_POST_API_KEY=your_canada_post_api_key

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Development Only
SKIP_EMAIL_VERIFICATION=false
ALLOW_TEST_ACCOUNTS=true
MOCK_BANK_API=false
MOCK_OCR_SERVICE=false
